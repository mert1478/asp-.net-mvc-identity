@using IdentityApp.Models
@model RoleUpdateViewModel
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Role Update Page</h1>

<form method="post">
    <div class="form-group">
        <label>Role ID</label>
        <input type="text" name="Id" value="@Model.Id" class="form-control" />
    </div>
    <div class="form-group">
        <label>Role Capture</label>
        <input type="text" name="name" value="@Model.name" class="form-control" />
    </div>

    <button class="btn btn-success">Get Role Update</button>
</form>